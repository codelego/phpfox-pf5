<?php echo '<?php' ?>

namespace <?= $namespace ?>;

use Phpfox\Form\Form;

class <?= $shortFormClass?> extends Form {

    /** id=<?= $metaId ?> */
    public function initialize(){

        $this->setTitle(_text('<?= $formTitle ?>','<?= $textDomain ?>'));
        $this->setInfo(_text('<?= $formTitle ?> [Form Info]','<?= $textDomain ?>'));
        $this->setAction(_url('#'));

        /** start elements **/

        <?php foreach($elements as $element): ?>

        <?php echo $elementGenerator->convert($element); ?>
        <?php endforeach; ?>

        /** end elements **/

        $this->addButton([
            'factory'    => 'button',
            'name'       => 'save',
            'label'      => _text('Save Changes'),
            'attributes' => ['class' => 'btn btn-primary','type' => 'submit',],
        ]);

        $this->addButton([
            'factory'    => 'button',
            'name'       => 'cancel',
            'href'       => _url('<?= $cancelUrl ?>'),
            'label'      => _text('Cancel'),
            'attributes' => ['class' => 'btn btn-link cancel','type'=>'button','data-cmd' => 'form.cancel',],
        ]);
    }
}
